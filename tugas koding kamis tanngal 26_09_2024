#include <iostream>
using namespace std;

int main() {
    int i, N,rerata, jumlah=0; 
    i = 2;
    
    cout << "masukan banyak nilai : ";
    cin >> N;
    cout << "jumlah : ";
    
    while (i < N){
      cout << i*7 << " + ";
      jumlah = jumlah + (i*7);
      i++;
    }
    jumlah = jumlah + (i*7);
    cout << i*7 << " ";
    cout << " = " << jumlah << endl;
    
    cout << "rerata  : " << jumlah << "/" << N;
    cout << " = " << jumlah;
    
    return 0;
    
}

