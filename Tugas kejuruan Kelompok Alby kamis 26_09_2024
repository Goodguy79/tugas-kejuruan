#include <iostream>
using namespace std;

int main() {
    int i=0, num, sum = 0;

    // Ask user for input
    cout << "Masukan bilangan: ";
    cin >> num;
    sum += num;
    
   	if (num % 2 == 0) {
    	cout << num << " - " ;
        num = num-2 ;
}
    
    while (num>i) {
    	if (num % 2 == 0) {
    		cout << num << " - " ;
    		sum -= num  ;
   }

    	num -- ;
}
    sum -= num ;
    cout << num << " " ;
    cout << " = " << sum ;
    
    return 0;

}
